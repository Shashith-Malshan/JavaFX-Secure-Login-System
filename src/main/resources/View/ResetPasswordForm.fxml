<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #ffff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.ResetPasswordFormController">
    <children>
        <Pane prefHeight="51.0" prefWidth="400.0" style="-fx-background-color: #003049;">
            <children>
                <Label layoutX="148.0" layoutY="16.0" text="Reset Password" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <TextField fx:id="txtEmail" layoutX="25.0" layoutY="106.0" onKeyReleased="#validateEmail" prefHeight="30.0" prefWidth="350.0" />
        <Label layoutX="28.0" layoutY="79.0" text=" Email address">
            <font>
                <Font name="Arial Narrow" size="14.0" />
            </font>
        </Label>
        <Label layoutX="31.0" layoutY="154.0" text="New Password">
            <font>
                <Font name="Arial Narrow" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtNewPassword" layoutX="25.0" layoutY="181.0" onKeyReleased="#validateNewPassword" prefHeight="30.0" prefWidth="350.0" />
        <Button fx:id="btnSubmit" layoutX="25.0" layoutY="303.0" mnemonicParsing="false" onAction="#actionSubmit" prefHeight="26.0" prefWidth="350.0" style="-fx-background-color: #0077b6;" text="Submit" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Label fx:id="lblBack" layoutX="27.0" layoutY="340.0" onMouseClicked="#clickedBack" text="Back to Login" textFill="#0077b6">
         <font>
            <Font size="13.0" />
         </font></Label>
      <Label layoutX="31.0" layoutY="228.0" text="Confirm Password">
         <font>
            <Font name="Arial Narrow" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtConfirmPassword" layoutX="25.0" layoutY="255.0" onKeyReleased="#validateConfirmPassword" prefHeight="30.0" prefWidth="350.0" />
      <Label fx:id="lblCondition" layoutX="327.0" layoutY="161.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
